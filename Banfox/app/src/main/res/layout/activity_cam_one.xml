<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CamOne">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btnCapture"
        android:background="@drawable/ds_button"
        android:textSize="20sp"
        android:textColor="@color/colorVeryLightGreyBanfox"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/captura_foto"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"/>

    <Button
        android:id="@+id/button_switch_camera"
        android:drawableBottom="@drawable/ic_flip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/ds_button"
        android:layout_alignParentEnd="true"
        android:visibility="visible"/>

    <Button
        android:id="@+id/buttonSendPhoto"
        android:drawableBottom="@drawable/ic_send_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ds_button"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/buttonDelPhoto"
        android:drawableBottom="@drawable/ic_clear_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/ds_button"
        android:visibility="invisible"/>

</RelativeLayout>